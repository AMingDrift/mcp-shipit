{
    "name": "@amingdrift/mcp-shipit",
    "version": "1.0.4",
    "description": "mcp-shipit is a Model Context Protocol (MCP)-based tool that can package specified directories into a ZIP file and upload them to GitHub Release.",
    "main": "./build/index.js",
    "type": "module",
    "files": [
        "build/**/*"
    ],
    "scripts": {
        "test": "node build/test/test-index.js",
        "build": "tsc && chmod +x build/index.js",
        "start": "node build/index.js",
        "dev": "tsc-watch --onSuccess \"node build/index.js\"",
        "debug": "pnpm dlx @modelcontextprotocol/inspector",
        "prepublishOnly": "npm run build"
    },
    "bin": {
        "mcp-shipit": "build/index.js"
    },
    "exports": {
        "node": {
            "import": "./build/index.js",
            "require": "./build/index.js"
        },
        "default": "./build/index.js"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/AMingDrift/mcp-shipit.git"
    },
    "keywords": [
        "mcp",
        "github",
        "release",
        "upload",
        "zip"
    ],
    "author": "AMingDrift",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/AMingDrift/mcp-shipit/issues"
    },
    "homepage": "https://github.com/AMingDrift/mcp-shipit#readme",
    "devDependencies": {
        "@eslint/eslintrc": "^3.3.1",
        "@eslint/js": "^9.36.0",
        "@octokit/types": "^15.0.0",
        "@types/archiver": "^6.0.3",
        "@types/node": "^24.5.2",
        "esbuild": "^0.25.10",
        "eslint": "^9.36.0",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-prettier": "^5.5.4",
        "eslint-plugin-unused-imports": "^4.2.0",
        "prettier": "^3.6.2",
        "prettier-plugin-organize-imports": "^4.3.0",
        "tsc-watch": "^7.2.0",
        "typescript": "^5.9.2",
        "typescript-eslint": "^8.44.1"
    },
    "dependencies": {
        "@modelcontextprotocol/sdk": "^1.18.2",
        "archiver": "^7.0.1",
        "dotenv": "^17.2.2",
        "octokit": "^5.0.3",
        "zod": "^3.25.76"
    }
}
